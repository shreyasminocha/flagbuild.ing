---
interface Props {
    src: string;
    country: string;
    link: string;
    vertical?: boolean;
}

const { src, country, link, vertical } = Astro.props;
---

<figure>
    <a href={link}
        ><img
            {src}
            alt={`Flag of ${country}`}
            title={country}
            class:list={[vertical ? "vertical" : "horizontal"]}
        /></a
    >
</figure>

<style>
    img {
        width: 5rem;
    }

    figure {
        width: 5rem;
        margin: 0;
        /* padding: 1rem; */
    }

    a {
        display: block;
    }

    .vertical {
        transform-origin: left top;
        transform: scaleY(-1) rotate(-90deg);
    }
</style>
