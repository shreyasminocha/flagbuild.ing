---
interface Props {
  src: string;
  country: string;
  link: string;
}

const { src, country, link } = Astro.props;
---

<figure>
  <a href={link}><img {src} alt={`Flag of ${country}`} title={country} /></a>
</figure>

<style>
  img {
    width: 5rem;
  }

  figure {
    width: 5rem;
    margin: 0;
    /* padding: 1rem; */
  }

  a {
    display: block;
  }
</style>
