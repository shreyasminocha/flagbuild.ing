---
interface Props {
  src: string;
  country: string;
  link: string;
  vertical?: boolean;
}

const { src, country, link, vertical } = Astro.props;
---

<figure class:list={[vertical ? "vertical" : "horizontal"]}>
  <a href={link}><img {src} alt={`Flag of ${country}`} title={country} /></a>
</figure>

<style>
  img {
    width: 5rem;
  }

  figure {
    width: 5rem;
    margin: 0;
    /* padding: 1rem; */
  }

  a {
    display: block;
  }

  .vertical {
    transform-origin: top left;
    transform: rotate(90deg);
  }
</style>
